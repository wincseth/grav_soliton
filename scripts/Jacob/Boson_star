        while abs(A_B_sum) > 1e-9:
            AB_adjustment += 1
            for i in range(loops):
                print(f"/n/n ----- in iter.nim. {i+1}, with {AB_adjustment} adjusments, zeta_s = {ZETA_S}")
                prev_e = e
