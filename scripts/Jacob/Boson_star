def main():
    #zeta_s = [.01, .1, .2, 0.5] #how relativistic the function is
    #zeta_s = [0.01, 0.1, 0.2, 0.3, 0.4]
    zeta_s = [.01]
    e_array = np.zeros_like(zeta_s)
