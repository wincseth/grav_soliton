        plt.figure(1)
        plt.plot(ZETA, U_abs, label=zetta_s_current, alpha = 0.5, marker = '.')
        plt.xlabel("ZETA")
        plt.xlim(0,30)
        plt.ylabel("U_bar")
        plt.legend()
        plt.grid(True)
